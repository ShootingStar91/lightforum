{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "module": "ES6",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  }
}
